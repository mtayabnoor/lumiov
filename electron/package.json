{
  "name": "lumiov",
  "version": "1.0.1-rc.0",
  "description": "Lumiov Kubernetes Manager",
  "author": "mtayabnoor",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "package": "electron-builder",
    "package:publish": "electron-builder --publish always",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "build": {
    "appId": "com.lumiov.app",
    "productName": "Lumiov",
    "publish": [
      {
        "provider": "github",
        "owner": "mtayabnoor",
        "repo": "lumiov",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "../frontend/public/lumiov.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "runAfterFinish": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend"
      },
      {
        "from": "../frontend/public/lumiov.ico",
        "to": "lumiov.ico"
      },
      {
        "from": "../backend/dist",
        "to": "backend"
      }
    ],
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/node": "25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "electron": "40.1.0",
    "electron-builder": "26.7.0",
    "eslint": "^9.39.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "ws": "8.19.0"
  }
}
