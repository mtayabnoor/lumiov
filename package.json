{
  "name": "lumiov-root",
  "version": "2.11.2",
  "description": "Lumiov Kubernetes Manager",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:electron": "tsc -p tsconfig.json && electron ./electron",
    "electron": "npm run build && tsc -p tsconfig.json && electron ./electron",
    "clean": "rimraf electron/dist electron/release",
    "build": "npm run build:frontend && npm run build:backend && tsc -p tsconfig.json",
    "package": "cd electron && npx electron-builder",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "release": "standard-version",
    "release:dry-run": "standard-version --dry-run",
    "prepare": "husky install",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
