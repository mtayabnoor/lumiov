{
  "name": "lumiov",
  "version": "1.0.1-rc.0",
  "description": "Lumiov Kubernetes Manager",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:electron": "cd electron && tsc -p tsconfig.json && electron .",
    "install:all": "npm run install:frontend && npm run install:backend && npm run install:electron",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:electron": "cd electron && npm install",
    "build": "npm run build:frontend && npm run build:backend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:electron": "cd electron && tsc -p tsconfig.json",
    "electron": "npm run build && electron electron/.",
    "package": "npm run build && cd electron && npx electron-builder",
    "clean": "rimraf electron/dist electron/release",
    "release": "standard-version",
    "release:rc": "standard-version --prerelease rc",
    "release:dry-run": "standard-version --dry-run",
    "prepare": "husky install",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "concurrently": "^8.2.0",
    "husky": "^9.0.0",
    "rimraf": "^5.0.0",
    "standard-version": "^9.5.0"
  }
}
