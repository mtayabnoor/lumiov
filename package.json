{
  "name": "lumiov",
  "version": "1.1.1",
  "description": "Lumiov Kubernetes Manager",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:electron": "cd electron && tsc -p tsconfig.json && electron .",
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:electron",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:electron": "cd electron && npm install",
    "build": "npm run build:frontend && npm run build:backend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:electron": "cd electron && tsc -p tsconfig.json",
    "electron": "npm run build && npm run start --prefix electron",
    "package": "npm run build && cd electron && npm run package",
    "package:publish": "npm run build && cd electron && npm run package:publish",
    "clean": "rimraf electron/dist electron/release",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "prepare": "husky install",
    "commitlint": "commitlint --edit",
    "format": "prettier --write \".\"",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:electron": "cd electron && npm run lint",
    "lint:all": "npm run lint:frontend && npm run lint:backend && npm run lint:electron",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:electron": "cd electron && npm run type-check",
    "type-check:all": "npm run type-check:frontend && npm run type-check:backend && npm run type-check:electron",
    "audit:frontend": "cd frontend && npm audit --omit=dev",
    "audit:backend": "cd backend && npm audit --omit=dev",
    "audit:electron": "cd electron && npm audit --omit=dev",
    "audit:all": "npm audit --omit=dev && npm run audit:frontend && npm run audit:backend && npm run audit:electron"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.6",
    "@semantic-release/npm": "13.1.4",
    "@semantic-release/release-notes-generator": "14.1.0",
    "concurrently": "^8.2.0",
    "husky": "^9.0.0",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "rimraf": "^6.1.3",
    "semantic-release": "25.0.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
