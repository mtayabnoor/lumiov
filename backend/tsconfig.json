{
  "compilerOptions": {
    /* 1. The Output (Modern & Fast) */
    "target": "ES2022",                // High compatibility with modern Node/Electron
    "module": "ESNext",                // Best for ncc and modern bundling
    "moduleResolution": "bundler",     // Ideal for ncc/Vite/Webpack workflows
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext", "DOM"],          // ESNext for Node logic, DOM for Electron UI
    "allowImportingTsExtensions": false,
    "noEmit": true,

    /* 2. Strictness (The Bug-Killer) */
    "strict": true,                    // Turns on ALL strict type-checking
    "noUnusedLocals": true,            // Errors if you define a variable but don't use it
    "noUnusedParameters": true,        // Errors if you have unused function arguments
    "noImplicitReturns": true,         // Ensures functions always return a value
    "noFallthroughCasesInSwitch": true, // Prevents bugs in switch statements

    /* 3. Compatibility & Cleanup */
    "esModuleInterop": true,           // Essential for importing Express correctly
    "skipLibCheck": true,              // Speeds up build by skipping type-checks of node_modules
    "forceConsistentCasingInFileNames": true, // Prevents Mac/Windows filename errors
    "removeComments": true,            // Shrinks your file size by deleting comments
    "sourceMap": true,                 // Essential for debugging production crashes
    
    /* 4. Module Safety */
    "moduleDetection": "force",        // Ensures every file is treated as a module
    "verbatimModuleSyntax": true       // Most predictable import/export behavior
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}